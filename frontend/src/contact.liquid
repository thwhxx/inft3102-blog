<div class="container mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold mb-8">Contact</h1>

    <form id="contactForm" class="max-w-lg space-y-6">
        <div>
            <label for="name" class="block text-sm font-medium mb-2">Your Name</label>
            <input 
                type="text" 
                id="name" 
                name="name" 
                required 
                class="w-full p-3 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
            >
        </div>

        <div>
            <label for="email" class="block text-sm font-medium mb-2">Email Address</label>
            <input 
                type="email" 
                id="email" 
                name="email" 
                required 
                class="w-full p-3 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
            >
        </div>

        <div>
            <label for="phone" class="block text-sm font-medium mb-2">Phone Number</label>
            <input 
                type="tel" 
                id="phone" 
                name="phone" 
                required 
                class="w-full p-3 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
            >
        </div>

        <div>
            <label for="subject" class="block text-sm font-medium mb-2">Subject</label>
            <input 
                type="text" 
                id="subject" 
                name="subject" 
                required 
                class="w-full p-3 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
            >
        </div>

        <div>
            <label for="message" class="block text-sm font-medium mb-2">Message</label>
            <textarea 
                id="message" 
                name="message" 
                rows="4" 
                required 
                class="w-full p-3 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
            ></textarea>
        </div>

        <button 
            type="submit" 
            class="w-full bg-blue-600 text-white py-3 px-6 rounded-md hover:bg-blue-700 transition duration-200"
        >
            Send Message
        </button>
    </form>

    <div id="spinner" class="hidden mt-8 flex justify-center">
        <div class="animate-spin rounded-full h-10 w-10 border-b-2 border-blue-600"></div>
    </div>

    <div id="success" class="hidden mt-8 p-4 bg-green-100 text-green-700 rounded-md text-center">
        Thanks for reaching out. We'll get back to you soon!
    </div>
</div>